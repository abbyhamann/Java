package comAbbyHamann;

import java.util.Scanner;
public class CreateClass {
	class Student {
		String name;
		String reg_no;
		int mark1;
		int mark2;
		int mark3;
		int mark4;
		int total;
		float average;
		String grade;
		Student (String name, String reg_no, int mark1, int mark2, int mark3, int mark4, int total, float average, String grade) {
			this.name = name;
			this.reg_no = reg_no;
			this.mark1 = mark1;
			this.mark2 = mark2;
			this.mark3 = mark3;
			this.mark4 = mark4;
			this.total = total;
			this.average = average;
			this.grade = grade;
		}
	}
	public static void main(String[] args) {
		Scanner scnr = new Scanner(System.in);
		
		System.out.print("Please enter the number of students");
		int num_of_students = scnr.nextInt();
		Student [] students = new Student[num_of_students];
		for (int i = 0; i < num_of_students; i++) {
			
			System.out.print("Please enter the first student's name, reg_no, mark 1, mark 2, mark 3, and mark 4, hitting enter between each value.");
			String name = scnr.nextLine();
			String reg_no = scnr.nextLine();
			int mark1 = scnr.nextInt();
			int mark2 = scnr.nextInt();
			int mark3 = scnr.nextInt();
			int mark4 = scnr.nextInt();
			int total = mark1 + mark2 +mark3 + mark4;
			float average = total / 4;
			String grade = "";
			if (average >= 90) {
				grade = "A";
			}
			else if (average >= 80 && average < 90) {
				grade = "B";
			}
			else if (average >= 70 && average < 80) {
				grade = "C";
			}
			else if (average >= 60 && average < 70) {
				grade = "D";
			}
			else {
				grade = "F";
			}
			Student new_student = new Student(name, reg_no, mark1, mark2, mark3, mark4, total, average, grade);
			students[i] = new_student;
		}
		
		
		

	}

}
